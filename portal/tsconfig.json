{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@i18n/*": ["./src/i18n/*"],
      "@utils/*": ["./src/utils/*"],
      "@/assets/*": ["./src/assets/*"],
      "@auth/*": ["./src/auth/*"],
      "@shared/*": ["./src/components/shared/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@context/*": ["./src/context/*"],
      "@services/*": ["./src/services/*"],
      "@types/*": ["./src/types/*"],
      "@ui/*": ["./src/components/ui/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/components/shared/card/my-event-card.tsx", "src/services/api-services/defaultApiService-old.ts"],
  "exclude": ["node_modules"]
}
